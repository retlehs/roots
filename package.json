{
  "name": "sage",
  "version": "9.0.0-beta.3",
  "author": "Roots <team@roots.io>",
  "homepage": "https://roots.io/sage/",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/roots/sage.git"
  },
  "bugs": {
    "url": "https://github.com/roots/sage/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "browserslist": ["last 2 versions", "android 4", "opera 12"],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.js": ["lint:scripts", "git add"],
    "*.{css,sass,scss,sss,less}": ["lint:styles", "git add"]
  },
  "scripts": {
    "build": "webpack --progress --config resources/assets/build/webpack.config.js",
    "build:production": "webpack --progress -p --config resources/assets/build/webpack.config.js",
    "build:profile": "webpack --progress --profile --json --config resources/assets/build/webpack.config.js",
    "start": "webpack --hide-modules --watch --config resources/assets/build/webpack.config.js",
    "rmdist": "rimraf dist",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles",
    "lint:scripts": "prettier --single-quote --trailing-comma=es5 --write resources/assets/**/*.js",
    "lint:styles": "prettier --write resources/assets/styles/**/*.{css,sass,scss,sss,less}",
    "test": "npm run -s lint:scripts -- --list-different && npm run -s lint:styles -- --list-different",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": ">= 6.9.4"
  },
  "devDependencies": {
    "autoprefixer": "~7.1",
    "browser-sync": "~2.18",
    "browsersync-webpack-plugin": "^0.6.0",
    "bs-html-injector": "~3.0",
    "buble-loader": "^0.4.1",
    "cache-loader": "~1.0",
    "clean-webpack-plugin": "^0.1.16",
    "copy-globs-webpack-plugin": "^0.2.0",
    "css-loader": "^0.28.4",
    "cssnano": "~4.0.0-rc.1",
    "extract-text-webpack-plugin": "~3.0",
    "file-loader": "^0.11.2",
    "husky": "^0.14.3",
    "imagemin-mozjpeg": "~6.0",
    "imagemin-webpack-plugin": "~1.5.0-beta.0",
    "import-glob": "~1.5",
    "lint-staged": "^4.0.2",
    "node-sass": "~4.5",
    "postcss-loader": "~2.0",
    "postcss-safe-parser": "~3.0",
    "prettier": "^1.5.3",
    "resolve-url-loader": "~2.1",
    "rimraf": "~2.6",
    "sass-loader": "~6.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "~3.3",
    "webpack-assets-manifest": "^0.7.0",
    "webpack-dev-middleware": "~1.11",
    "webpack-hot-middleware": "~2.18",
    "webpack-merge": "~4.1",
    "yargs": "~8.0"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "jquery": "1.12.4 - 3"
  }
}
